<tiles-definitions>
	
   <!-- ADMIN -->
   <definition name="baseLayout" template="/jsp/layout/adminLayout.jsp">
      <put-attribute name="title"  	value="/jsp/layout/adminHeader.jsp"/>
      <put-attribute name="nav" 	value="/jsp/layout/adminNav.jsp"/>
      <put-attribute name="body"   	value=""/>
      <put-attribute name="footer"  value="/jsp/layout/adminFooter.jsp"/>
   </definition>

   <definition name="dashboard" extends="baseLayout">      
      <put-attribute name="body"   value="/jsp/admin/dashboard.jsp"/>      
   </definition>
   
   <definition name="bodySwitcher" template="/WEB-INF/layouts/bodySwitcher.jspx">
	<put-attribute name="bodyContent" value="" />
   </definition>
   
   
   <!-- MAIN -->
   <definition name="mainLayout" template="/jsp/layout/mainLayout.jsp">
      <put-attribute name="header"  	value="/jsp/layout/mainHeader.jsp"/>
      <put-attribute name="body"   	value=""/>
      <put-attribute name="footer"  value="/jsp/layout/mainFooter.jsp"/>
   </definition>
   
   <definition name="home" extends="mainLayout">      
      <put-attribute name="body"   value="/jsp/main/home.jsp"/>      
   </definition>
   
   <definition name="menu" extends="mainLayout">      
      <put-attribute name="body"   value="/jsp/main/menu.jsp"/>      
   </definition>
   
   <definition name="locationanddelivery" extends="mainLayout">      
      <put-attribute name="body"   value="/jsp/main/locationanddelivery.jsp"/>      
   </definition>
   
   <definition name="specials" extends="mainLayout">      
      <put-attribute name="body"   value="/jsp/main/specials.jsp"/>      
   </definition>
   
</tiles-definitions>